{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Gamma World Character",
    "description": "A Gamma World Character",
    "type": "object",
    "properties": {
        "name": {
            "description": "Character name",
            "type": "string"
        },
        "playerName": {
            "description": "Player name",
            "type": "string"
        },
        "primaryOrigin": {
            "description": "Full name of the primary origin type.",
            "type": "string",
        },
        "secondaryOrigin": {
            "description": "Full name of the secondary origin type.",
            "type": "string",
        },
        "abilityScores": {
            "type": "array",
            "items": {
                "type": "object",
				"properties": {
					"key": {
						"description": "Ability score name.",
						"type": "string"
					}
					"value": {
						"description": "Ability score value",
						"type": "string"
					}
				}
            },
            "minItems": 6,
            "maxItems": 6,
            "uniqueItems": true
        }
    },
    "required": ["name", "playerName", "primaryOrigin", "secondaryOrigin", "abilityScores"]
}